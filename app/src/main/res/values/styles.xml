<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/emptyStar</item>
        <item name="colorControlActivated">@color/goldenStar</item>
    </style>

    <!-- Menu Theme -->
    <style name="CustomToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/colorBack</item>
        <item name="titleTextColor">@color/colorBack</item>
    </style>

    <!-- Menu Item Theme -->
    <style name="CustomPopupStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorBackground">@color/colorBack</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
